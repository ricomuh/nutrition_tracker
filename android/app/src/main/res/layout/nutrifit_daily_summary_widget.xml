<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:id="@+id/widget_container">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NutriFit AI"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginStart="8dp" />
        
        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="12sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Stats Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Calories Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            
            <TextView
                android:id="@+id/widget_calories_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2E7D32" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:id="@+id/widget_calories_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textSize="14sp"
                android:textColor="#666666" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cal"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Macros -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Protein -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:minWidth="16dp" />
                
                <ProgressBar
                    android:id="@+id/widget_protein_progress"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#FF5722"
                    android:progress="0"
                    android:max="100" />
                
                <TextView
                    android:id="@+id/widget_protein_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textSize="10sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Carbs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:minWidth="16dp" />
                
                <ProgressBar
                    android:id="@+id/widget_carbs_progress"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#2196F3"
                    android:progress="0"
                    android:max="100" />
                
                <TextView
                    android:id="@+id/widget_carbs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textSize="10sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Fat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:minWidth="16dp" />
                
                <ProgressBar
                    android:id="@+id/widget_fat_progress"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#FF9800"
                    android:progress="0"
                    android:max="100" />
                
                <TextView
                    android:id="@+id/widget_fat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textSize="10sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/widget_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to open NutriFit AI"
        android:textSize="10sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>